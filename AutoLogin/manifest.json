{
  "name": "AutoLogin",
  "version": "0.0.1",
  "description": "Automatically login to websites without storing passwords",
  "permissions": ["alarms", "storage", "tabs"],
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "manifest_version": 3
}
